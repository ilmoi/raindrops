{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": ["^format:check"]
    },
    "lint": {
      "outputs": []
    },
    "lint:check": {
      "outputs": ["format:check"]
    },
    "build": {
      "dependsOn": ["lint:check"],
      "outputs": ["dist/**", "build/**", "target/**"]
    },
    "build:lib": {
      "dependsOn": ["lint:check"],
      "outputs": ["dist/**", "build/**", "target/**"]
    },
    "build:program": {
      "dependsOn": ["build:lib"],
      "outputs": ["dist/**", "build/**", "target/**"]
    },
    "build:cli": {
      "dependsOn": ["build:program"],
      "outputs": ["dist/**", "build/**", "target/**"]
    },
    "test": {
      "dependsOn": ["build:cli", "build:lib", "build:program"],
      "outputs": [],
      "inputs": ["tests/**/*.ts"]
    }
  }
}
